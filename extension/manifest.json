{
  "name": "CastList",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Automatically tags names in Times news articles and provides biographical information.",
  // "content_scripts": [{
  //   "js": [ "jquery.min.js", "castlist.js" ],
  //   "matches": [ "http://*/", "https://*/"]
  // }],
  "background": {
    "scripts": [ "jquery.min.js", "castlist.js", "go.js" ],
    "css": [ "style.css" ]
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "CastList"
    // "default_popup": "popup.html"
  }
}
